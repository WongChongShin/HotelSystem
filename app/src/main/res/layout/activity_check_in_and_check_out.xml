<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkIn_and_checkOut">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_check_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:clickable="true"
        android:contentDescription="@string/add_check_button"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customer_editSearch"
        app:srcCompat="@drawable/add_logo" />

    <TextView
        android:id="@+id/customer_list_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="50dp"
        android:text="@string/check_in_check_out"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/customer_page_back_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/customer_page_back_logo"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_arrow" />

    <ImageView
        android:id="@+id/customer_search_logo"
        android:layout_width="39dp"
        android:layout_height="35dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="250dp"
        android:contentDescription="@string/search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.319"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customer_list_textView"
        app:srcCompat="@drawable/search_logo" />

    <EditText
        android:id="@+id/customer_editSearch"
        android:layout_width="293dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toEndOf="@+id/customer_search_logo"
        app:layout_constraintTop_toBottomOf="@+id/customer_list_textView"
        android:hint = "@string/editSearch"
        android:inputType="textPersonName"
        android:importantForAutofill="no" />

</androidx.constraintlayout.widget.ConstraintLayout>