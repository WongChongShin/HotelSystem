<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_page">

    <Button
        android:id="@+id/check_button"
        android:layout_width="205dp"
        android:layout_height="83dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="106dp"
        android:text="@string/check_in_and_check_out_string"
        app:backgroundTint="#0784E4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotel_textview" />

    <TextView
        android:id="@+id/hotel_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="116dp"
        android:layout_marginTop="120dp"
        android:text="@string/hello_string"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_page_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="120dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/hotel_textview"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/facility_button"
        android:layout_width="205dp"
        android:layout_height="83dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="106dp"
        android:text="@string/facilities_monitoring_string"
        app:backgroundTint="#0784E4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/room_button" />

    <Button
        android:id="@+id/room_button"
        android:layout_width="205dp"
        android:layout_height="83dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="106dp"
        android:text="@string/room_service_string"
        app:backgroundTint="#0784E4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_button" />

</androidx.constraintlayout.widget.ConstraintLayout>