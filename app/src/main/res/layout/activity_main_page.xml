<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_page">

    <ImageView
        android:id="@+id/hotel_logo2"
        android:layout_width="384dp"
        android:layout_height="83dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/logo_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hotel_logo" />

    <Button
        android:id="@+id/staff_button"
        android:layout_width="205dp"
        android:layout_height="83dp"
        android:layout_marginTop="40dp"
        android:text="@string/check_in_and_check_out_string"
        app:backgroundTint="#0784E4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotel_textview" />

    <TextView
        android:id="@+id/hotel_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="47dp"
        android:text="@string/hello_string"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotel_logo2" />

    <Button
        android:id="@+id/room_button"
        android:layout_width="205dp"
        android:layout_height="83dp"
        android:layout_marginTop="60dp"
        android:text="@string/room_service_string"
        app:backgroundTint="#0784E4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/staff_button" />

    <Button
        android:id="@+id/customer_button"
        android:layout_width="205dp"
        android:layout_height="83dp"
        android:layout_marginTop="60dp"
        android:text="@string/facilities_monitoring_string"
        app:backgroundTint="#0784E4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/room_button" />

    <TextView
        android:id="@+id/main_page_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="47dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/hotel_textview"
        app:layout_constraintTop_toBottomOf="@+id/hotel_logo2" />

</androidx.constraintlayout.widget.ConstraintLayout>