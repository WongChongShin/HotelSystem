<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/hotel_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="35dp"
        android:text="@string/hello_string"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hotel_logo3" />

    <TextView
        android:id="@+id/customer_username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="158dp"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/hotel_textview2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/hotel_logo3"
        android:layout_width="384dp"
        android:layout_height="83dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/logo_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hotel_logo" />

    <Button
        android:id="@+id/bookingBtn"
        android:layout_width="295dp"
        android:layout_height="114dp"
        android:layout_marginTop="200dp"
        android:text="Booking Room"
        android:textSize="24sp"
        app:backgroundTint="#0784E4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/serviceBtn"
        android:layout_width="301dp"
        android:layout_height="117dp"
        android:layout_marginTop="68dp"
        android:text=" Service Request"
        android:textSize="24sp"
        app:backgroundTint="#0784E4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookingBtn"
        app:layout_constraintVertical_bias="0.021" />
</androidx.constraintlayout.widget.ConstraintLayout>